{
  "description": "Defaults for our code coverage",
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 75,
    "statements": 75,
    "functions": 75,
    "branches": 75,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "text-summary"
    ],
    "ignore-class-method": "methodToIgnore",
    "cache": true,
    "all": true
  }
}

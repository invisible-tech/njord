{
  "compilerOptions": {
    "moduleResolution": "node",

    "target": "esnext",
    "module": "commonjs",
    "lib": ["ES2015"],

    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
		"test"
  ]
}
